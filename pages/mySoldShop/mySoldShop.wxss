page{
  background: #f5f5f5;
}
.wrap{
  margin-top: 30rpx;
}
.wrap .card:last-child{
  margin-bottom: 0;
}
.card{
  width: 100%;
  padding: 24rpx 50rpx;
  box-sizing: border-box;
  background: #fff;
  display: flex;
  justify-content: space-between;
  margin-bottom: 24rpx;
}
.shop_pic{
  width: 215rpx;
  height: 215rpx;
  border-radius: 8rpx;
  overflow: hidden;
}
.shop_pic image{
  width: 100%;
  height: auto;
}
.shop_info{
  width: 435rpx;
  padding: 0 0 0 28rpx;
  box-sizing: border-box;
  position: relative;
}
.shop_info .title{
  font-size: 30rpx;
  color: #373737;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.price{
  display: block;
  font-size: 30rpx;
  color: #e60026;
  margin-top: 26rpx;
}
.shop_info .status{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
}
.shop_info .status text{
  display: block;
  font-size: 30rpx;
  color: #7b7b7b;
}
.shop_info .status button{
  height: 54rpx;
  font-size: 30rpx;
  color: #ffffff;
  padding: 0 34rpx;
  box-sizing: border-box;
  background-color: #e60026;
	border-radius: 10rpx;
  line-height: 54rpx;
  margin: 0;
}
.shop_info .status button::after{
  border: none;
}