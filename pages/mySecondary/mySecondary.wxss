.swiper-block{
  height: 338rpx;
  width: 100%;
}
.swiper-item{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  overflow:unset;
}
.slide-image{
  height:250rpx;
  width: 520rpx;
  border-radius: 9rpx;
  /* box-shadow: 0px 0px 30rpx rgba(0, 0,0,.2);  */
  margin: 0rpx 30rpx;
  z-index: 1;  
  transition:all .3s ease-in 0s;
  transform: scale(.96);
}
.active{
  transform: scale(1.14);
  transition:all .3s ease-in 0s;
  z-index: 20; 
}

