.head{
  padding: 30rpx 30rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  box-sizing: border-box;
}
.head view{
  width: 120rpx;
  height: 120rpx;
  border-radius: 120rpx;
  margin-right: 36rpx;
  overflow: hidden;
}
.head view image{
  width: 100%;
  height: auto;
}
.head text{
  font-size: 36rpx;
  color: #212121;
}
.price{
  font-size: 44rpx;
  color: #e60026;
  box-sizing: border-box;
  padding: 0 30rpx;
}
.shop_describe{
  padding: 0 30rpx;
  box-sizing: border-box;
  display: block;
  font-size: 24rpx;
  color: #2f2f2f;
}

.content{
  width: 690rpx;
  margin-left: 30rpx;
  margin-top: 44rpx;
}
.content image{
  width: 100%;
  height: auto;
  margin-bottom: 24rpx;
}

.foter{
  width: 100%;
  height: 74rpx;
  font-size: 32rpx;
  color: #e60026;
  text-align: center;
}