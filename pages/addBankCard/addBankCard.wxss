page{
  background: #f5f5f5;
}
.borderB{
  border-bottom: 2rpx solid #f5f5f5;
}
.message{
  width: 100%;
  height: 84rpx;
  border-top:2rpx solid #f5f5f5;
  background-color: #ffffff;
  box-shadow: 0px -1px 2px 0px 
		#e9e9e9;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 0 30rpx;
  box-sizing: border-box;
  margin-bottom: 24rpx;
  position: fixed;
  top: 0;
  left: 0;
}
.message image{
  width: 40rpx;
  height: auto;
  margin-right: 20rpx;
}
.message text{
  font-size: 24rpx;
  color: #e60026;
  opacity: .7
}

.content{
  background-color: #ffffff;
  padding: 0 30rpx;
  box-sizing: border-box;
  margin-top: 108rpx;
}
.content .inputM{
  width: 690rpx;
  height: 98rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.content .inputM text{
  display: block;
  width: 250rpx;
  font-size: 28rpx;
  color: #111111;
}
.content .inputM input{
  width: 440rpx;
  font-size: 28rpx;
  color: #c6c6c6;
  text-align: right;
}
.content .inputPickerM{
  width: 690rpx;
  height: 98rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.content .inputPickerM text{
  display: block;
  width: 250rpx;
  font-size: 28rpx;
  color: #111111;
}
.content .inputPickerM picker{
  width: 350rpx;
}
.content .inputPickerM picker view{
  height: 98rpx;
  font-size: 28rpx;
  color: #c6c6c6;
  text-align: right;
  line-height: 98rpx;
}
.content .inputPickerM image{
  width: 24rpx;
  height: auto;
}

.save{
  width: 580rpx;
	height: 88rpx;
	background-color: #e60026;
	border-radius: 8rpx;
  margin-top: 132rpx;
  font-size: 36rpx;
  color: #ffffff;
  line-height: 88rpx;
}
.save::after{
  border: none;
}