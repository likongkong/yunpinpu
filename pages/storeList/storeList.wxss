page{
  background: #f5f5f5;
}
/* 卡片标题  start*/
.title-h1::before{
  content: "";
  position: absolute;
  left: 0;
  width: 11rpx;
	height: 34rpx;
	background-blend-mode: normal, 
		normal;
	border-radius: 6rpx;
  display: block;
}
.blue{
  color: #006ad1;
}
.yellow{
  color: #ff8c10;
}
.blue::before{
  background-image: linear-gradient(-30deg, 
		#4aa1f5 0%, 
		#2be0ff 100%), 
	linear-gradient(
		#f33b30, 
		#f33b30);
}
.yellow::before{
  background-image: linear-gradient(-30deg, 
		#fdbd35 0%, 
		#f98f49 100%), 
	linear-gradient(
		#f33b30, 
		#f33b30);
}
/* end */

.card{
  margin-top: 27rpx;
  padding: 0 30rpx 32rpx 30rpx;
  box-sizing: border-box;
  background: #fff;
}
.card .title{
  width: 100%;
  height: 88rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.card .title-h1{
  position: relative;
  font-size: 34rpx;
  display: inline-block;
  line-height: 34rpx;
  padding-left: 18rpx;
}

.card .title view{
  font-size: 24rpx;
  color: #585858;
  display: flex;
  align-items: center;
}
.card .title view image{
  width: 20rpx;
  margin-left: 8rpx;
}
.card .commodity{
  display: flex;
  justify-content: space-between;
}
.card .commodity>view{
  width: 216rpx;
}
.card .commodity>view image{
  width: 216rpx;
}
.card .commodity>view>view{
  display: flex;
  align-items: center;
}
.card .commodity .name{
  font-size: 24rpx;
  color: #323232;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.card .commodity .price{
  font-size: 28rpx;
  color: #e60026;
}
