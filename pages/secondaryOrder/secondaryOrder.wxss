page{
  background: #f5f5f5;
}
.nav{
  width: 100%;
  height: 88rpx;
  background: #fff;
  box-shadow: 0px 8px 24px 0px 
		rgba(203, 203, 203, 0.4);
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10
}
.title-scroll-view{
  overflow:hidden;
  white-space:nowrap;
}
.sub-title {
  text-align: center;
}
.title-item {
  height: 88rpx;
  line-height: 88rpx;
  font-size: 28rpx;
  display: inline-block;
  padding: 0 30rpx;	
  color: #666666;
}
.active {
  color: #e60026;
  position: relative;
}
.active::before{
  content: '';
  width: 30%;
  height: 6rpx;
  border-radius: 6rpx;
  display: block;
  position: absolute;
  bottom: 0;
  left: 50%;
  margin-left: -15%;
  background:#e60026; 
}
.nav-container {
  display: flex;
  flex-direction: row;
}

.content{
  margin-top: 112rpx;
  padding-bottom: 24rpx;
}
.content .item:last-child{
  margin-bottom: 0;
}
.content .item{
  padding: 36rpx 30rpx 28rpx 30rpx;
  background: #fff;
  margin-bottom: 24rpx;
}
.content .item>view{
  width: 100%;
}
.content .item-t{
  display: flex;
  justify-content: space-between;
}
.content .item-t image{
  width: 204rpx;
  height: auto;
}
.content .shopInfo{
  width: 486rpx;
  padding-left: 24rpx;
  box-sizing: border-box;
  position: relative;
}
.content .shopInfo .title{
  display: block;
  font-size: 30rpx;
  padding-right: 76rpx;
  box-sizing: border-box;
  color: #000000;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  margin-top: 40rpx;
}
.content .shopInfo .lable{
  display: block;
  position: absolute;
  right: 35rpx;
  top: -8rpx;
  display: flex;

}
.content .shopInfo .lable text{
  font-size: 28rpx;
  color: #e60026;
  margin-left: 45rpx;
}
.content .shopInfo .shopType{
  height: 58rpx;
  background-color: #f5f5f5;
  padding: 0 25rpx;
  display: flex;
  justify-content: space-between;
  display: inline-block;
  border-radius: 8rpx;
  margin-top: 20rpx;
}
.content .shopInfo .shopType text{
  font-size: 24rpx;
  color: #848484;
  margin-right: 44rpx;
  display: inline-block;
  line-height: 58rpx;
}
.content .shopInfo .shopType text:last-child{
  margin-right: 0;
}
.content .shopInfo .shopType image{
  width: 20rpx;
  height: auto;
}
.content .shopInfo .price{
  font-size: 30rpx;
  color: #e60026;
  margin-top: 24rpx;
  position: relative;
}
.content .shopInfo .price text{
  font-size: 24rpx;
  color: #212121;
  position: absolute;
  top: 0;
  right: 20rpx;
}
.content .shopInfo .totalPrice{
  font-size: 28rpx;
  color: #212121;
  text-align: right;
  margin-top: 30rpx;
  padding-right: 20rpx;
}
.content .shopInfo .totalPrice text{
 color:  #e60026;
}
.content .item-b{
  width: 100%;
  margin-top: 42rpx;
  overflow: hidden;
  padding-right: 20rpx;
  box-sizing: border-box;
}
.content .item-b button{
  height: 76rpx;
  padding: 0 40rpx;
  box-sizing: border-box;
  display: inline-block;
  font-size: 30rpx;
  line-height: 76rpx;
  float: right;
  margin-left: 44rpx;
}
.content .item-b button::after{
  border: none;
}
.content .item-b view{
  float: right;
  font-size: 30rpx;
  color: #212121;
}
.content .item-b view text{
  color:  #e60026;
}
.red{
  background: #e60026;
  color: #ffffff;
}
.gray{
  border: solid 1px #d5d5d5;
  color: #b0b0b0;
  background: #fff;
}