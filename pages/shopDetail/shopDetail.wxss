page{
  background: #f5f5f5;
}
.share{
  width: 100rpx;
  height: 100rpx;
  position: fixed;
  top: 0;
  right: 0;
  z-index: 10;
  display: flex;
  align-items: center;
  justify-content: center
}
.share image{
  width: 60rpx;
  opacity: .5
}
.banner image{
  width: 100%;
}

.shopInfo{
  padding: 40rpx 30rpx;
  box-sizing: border-box;
  background: #fff;
}
.shopInfo .name{
  font-size: 36rpx;
  color: #000000;
  font-weight: bold;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  padding-right: 83rpx;
  box-sizing: border-box
}
.shopInfo view{
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}
.shopInfo .price{
  font-size: 36rpx;
  color: #e60026;
}
.shopInfo .num{
  font-size: 30rpx;
  color: #6b6b6b;
}

.text{
  width: 100%;
  height: 92rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 22rpx;
  color: #444444;
}
.text view{
  width: 400rpx;
  height: 2rpx;
  text-align: center;
  display: flex;
  justify-content: center;
  position: relative;
}
.text view::before{
  content: '';
  position: absolute;
  left: 0;
  width: 400rpx;
  height: 2rpx;
  background: #bbbbbb;
}
.text view text{
  display: block;
  background: #f5f5f5;
  position: absolute;
  top: -16rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.shopDetail{
  width: 100%;
  padding-bottom: 120rpx;
  box-sizing: border-box;
}
.shopDetail image{
  width: 100%;
  display: block;
}

.foter{
  width: 100%;
  position: fixed;
  left: 0;
  bottom: 0;
  background: #fff;
  display: flex;
}
.foter>view{
  height: 106rpx;
}
.like{
  width: 320rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.like view{
  width: 160rpx;
  height: 106rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.like view image{
  width: 44rpx;
}
.addCart{
  width: 215rpx;
  background-color: #eaeaea;
  font-size: 30rpx;
  color: #212121;
  text-align: center;
  line-height: 106rpx;
}
.toPay{
  width: 215rpx;
  background-color: #e60026;
  font-size: 30rpx;
  color: #fff;
  text-align: center;
  line-height: 106rpx;
}