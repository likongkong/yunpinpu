.card{
  width: 100%;
  padding: 24rpx 30rpx;
  box-sizing: border-box;
  background: #fff;
  display: flex;
  justify-content: space-between;
  margin-bottom: 24rpx;
}
.shop_pic{
  width: 215rpx;
  height: 215rpx;
  border-radius: 8rpx;
  overflow: hidden;
}
.shop_pic image{
  width: 100%;
  height: auto;
}
.shop_info{
  width: 435rpx;
  padding: 0 0 0 28rpx;
  box-sizing: border-box;
  position: relative;
}
.shop_info .title{
  font-size: 30rpx;
  color: #666666;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.price{
  display: block;
  font-size: 30rpx;
  color: #e60026;
  margin-top: 14rpx;
}
.shop_info .label{
  position: absolute;
  bottom: 0;
  right: 0;
  font-size: 30rpx;
}
.shop_info .shopType{
  height: 58rpx;
  background-color: #f5f5f5;
  padding: 0 25rpx;
  display: flex;
  justify-content: space-between;
  display: inline-block;
  border-radius: 8rpx;
  margin-top: 12rpx;
}
.shop_info .shopType text{
  font-size: 24rpx;
  color: #848484;
  margin-right: 44rpx;
  display: inline-block;
  line-height: 58rpx;
}
.shop_info .shopType text:last-child{
  margin-right: 0;
}

.shipments{
  display: flex;
  justify-content: space-between;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.shipments text{
  font-size: 30rpx;
}
.shipments text:first-child{
  color: #666666;
}
.shipments text:last-child{
  color: #e60026;
}
.user_info{
  display: block;
  font-size: 30rpx;
  color: #666666;
  padding: 0 30rpx;
  box-sizing: border-box;
  margin-top: 40rpx;
}

.expressage_info{
  padding: 0 30rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  color: #c4c4c4;
  margin-top: 76rpx;
}
.expressage_info input{
  padding-left: 25rpx;
  box-sizing: border-box;
  margin-top: 28rpx;
}
.submit{
  width: 510rpx;
  height: 66rpx;
  background-color: #e60026;
	border-radius: 8rpx;
  position: fixed;
  bottom: 15rpx;
  left: 50%;
  margin-left: -255rpx;
  font-size: 32rpx;
  color: #ffffff;
  line-height: 66rpx;
}