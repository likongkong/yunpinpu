.hide{
  display: none !important;
}

.wrap{
  background: #fff;
  padding-bottom: 120rpx;
  box-sizing: border-box;
}
.invitation_code{
  padding: 50rpx 30rpx 0 30rpx;
  box-sizing: border-box;
}
.invitation_code>text{
  font-size: 30rpx;
  display: block;
  color: #e60026;
  margin-bottom: 40rpx;
}
.invitation_code view{
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.invitation_code view .code{
  font-size: 32rpx;
  color: #e60026;
  margin-right: 34rpx;
}
.invitation_code view image{
  width: 34rpx;
  height: auto;
}

.h1{
  width: 690rpx;
  height: 122rpx;
  border-bottom: 2rpx solid #f5f5f5;
  margin-left: 30rpx;
  display: flex;
  align-items: center;
  margin-top: 44rpx;
}
.h1 text{
  font-size: 30rpx;
  color: #212121;
}
.h1 text:first-child{
  margin-right: 200rpx;
}

.team{
  padding: 0 100rpx;
  box-sizing: border-box;
  margin-top: 60rpx;
}
.team_item{
  width: 100%;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.team_item view{
  display: inline-block;
  position: relative;
  font-size: 24rpx;
  color: #e60026;
  padding-left: 40rpx;
  display: flex;
  align-items: center;
}
.team_item view::before{
  content: '';
  position: absolute;
  top: 4rpx;
  left: 0;
  width: 18rpx;
  height: 18rpx;
  border-radius: 18rpx;
  border: 4rpx solid #e60026;
}
.team_item view text{
  font-size: 24rpx;
  color: #212121;
}
.team_item view image{
  width: 28rpx;
  height: auto;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.foter{
  width: 100%;
  height: 106rpx;
  border-top: 2rpx solid #f5f5f5;
  display: flex;
  align-items: center;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #fff;
}
.applyBtn{
  width: 570rpx;
  height: 74rpx;
  background-color: #e60026;
	border-radius: 8rpx;
  font-size: 36rpx;
  color: #ffffff;
  line-height: 74rpx;
}
.applyBtn::after{
  border: none;
}