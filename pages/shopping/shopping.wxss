page{
  background: #f5f5f5;
}
.head{
  width: 100%;
  height: 100rpx;
  background: #fff;
  position: fixed;
  top: 0;
  left: 0;
}
.head text{
  display: block;
  width: 130rpx;
  height: 100rpx;
  position: absolute;
  top: 0;right: 0;
  color: #000000;
  font-size: 30rpx;
  text-align: center;
  line-height: 100rpx;
}
.content{
  width: 100%;
  margin-top: 124rpx;
  padding-bottom: 122rpx
}
.content>view:last-child{
  margin-bottom: 0;
}
.card{
  width: 100%;
  min-height: 258rpx;
  padding: 52rpx 68rpx 52rpx 0;
  background: #fff;
  display: flex;
  box-sizing: border-box;
  margin-bottom: 24rpx;
}
.card .checkBtn{
  width: 112rpx;
  padding-left: 50rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center
}
.card .checkBtn image{
  width: 40rpx;
  height: auto;
}
.card .commodityPic{
  width: 178rpx;
  display: flex;
  align-items: center
}
.card .commodityPic image{
  width: 178rpx;
  height: auto;
}
.card .commodityInfo{
  display: flex;
  align-items: center
}
.card .commodityInfo>view{
  width: 392rpx;  
  padding-left: 30rpx;
  box-sizing: border-box;
}
.card .commodityInfo .h1{
  font-size: 26rpx;
  color: #000000;
  display: block;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  margin-bottom: 21rpx;
}
.card .commodityInfo>view>view{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 17rpx;
}
.card .commodityInfo .price{
  font-size: 30rpx;
  color: #e60026;
  display: inline-block;
  font-weight: bold
}

.foter{
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: space-between;
  background: #fff;
}
.foter .checkall{
  display: flex;
  align-items: center;
  height: 98rpx;
}
.foter .checkall image{
  width: 40rpx;
  height: auto;
  margin-left: 51rpx;
}
.foter .checkall text{
  font-size: 30rpx;
  color: #999999;
  display: block;
  margin-left: 25rpx;
}
.foter .total , .foter .delete{
  display: flex;
  align-items: center;
  padding-right: 30rpx;
  box-sizing: border-box;
}
.foter .total text{
  font-size: 30rpx;
}
.foter .total .text{
  color: #111111;
}
.foter .total .amount{
  color: #e60026;
  font-weight: bold
}
.foter button{
  width: 180rpx;
	height: 76rpx;
  background-image: linear-gradient(
		#e60026, 
		#e60026), 
	linear-gradient(
		#67d483, 
		#67d483);
	background-blend-mode: normal, 
		normal;
	border-radius: 8rpx;
  font-size: 30rpx;
  color: #fff;
  line-height: 76rpx;
  margin-left: 36rpx;
  padding: 0;
}
