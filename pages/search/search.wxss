page{
  background: #f5f5f5;
}
.h1{
  width: 100%;
  height: 88rpx;
  font-size: 28rpx;
  color: #808080;
  line-height: 88rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.gray{
    width: 100rpx;
    height: 30rpx;
    background: #f5f5f5;
}


.search{
  width: 100%;
  height: 100rpx;
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  position: relative;
  background: #fff;
  position: fixed;
  top: 0;
  left: 0;
}
.search .search-input{
  width: 591rpx;
	height: 62rpx;
	background-color: #f5f5f5;
	border-radius: 31rpx;
  font-size: 34rpx;
	color: #c6c6c6;
  line-height: 62rpx;
  padding-left: 70rpx;
  box-sizing: border-box;
}
.search .search-input input{
  width: 100%;
	height: 62rpx;
  line-height: 62rpx;
}
.search .search-input image{
  position: absolute;
  top: 33rpx;left: 50rpx;
  width: 34rpx;
	height: 34rpx;
}
.search .cancel{
  font-size: 30rpx;
  color: #212121;
  display: block;
  padding: 35rpx 0;
}

.lebalmodule{
  position: absolute;
  top: 100rpx;
  background: #fff;
  bottom: 0;
}
.hot{
  width: 100%;
  margin-top: 15Prpx;
  border-top: 2rpx solid #f5f5f5;
}
.label-box{
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.label-box text{
  padding: 20rpx;
  font-size: 24rpx;
  color: #6b6b6b;
  display: inline-block;
  background: #f5f5f5;
  border-radius: 8rpx;
  margin-right: 28rpx;
  margin-bottom: 20rpx;
}

.history{
  margin-top: 10rpx;
  position: relative;
}
.history .delete{
  width: 32rpx;
	height: 32rpx;
  position: absolute;
  top: 0;
  right: 0;
  padding: 28rpx;
}

.commodity-box{
  margin-top: 130rpx;
  overflow: hidden;
}
.commodity-box>view{
  width: 373rpx;
  height: 478rpx;
  float: left;
  background: #fff;
  margin-bottom: 4rpx;
}
.commodity-box .commodityPic{
  width: 100%;
  height: 367rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.commodity-box .commodityPic image{
  width: 242rpx;
}
.commodity-box .commodityName{
  font-size: 24rpx;
  color: #6b6b6b;
  padding: 0 50rpx 0 30rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  box-sizing: border-box;
  display: block;
}
.commodity-box .commodityInfo{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 25rpx 0 30rpx;
  box-sizing: border-box;
}
.commodity-box .commodityInfo .price{
  font-size: 24rpx;
  color: #e60026;
}
.commodity-box .commodityInfo .num{
  font-size: 24rpx;
  color: #6b6b6b;
}
.commodity-box>view:nth-child(2n){
  float: right;
}