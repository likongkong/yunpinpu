page{
  background: #f5f5f5;
}
.head{
  width: 100%;
  background-color: #ffffff;
	box-shadow: 0px 2px 6px 0px 
		rgba(228, 228, 228, 0.4);
  display: flex;
  position: fixed;
  top: 0;
  left: 0;
}
.head>view{
  height: 84rpx;
}
.head .shop{
  width: 80%;
  display: flex;
  justify-content: space-between;
  padding-left: 30rpx;
  box-sizing: border-box;
}
.head .shop text{
  display: inline-block;
  height: 84rpx;
  font-size: 30rpx;
  color: #707070;
  line-height: 84rpx;
}
.head .shop .active{
  color: #e60026;
  position: relative;
}
.head .shop .active::after{
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  margin-left: -25%;
  width: 50%;
  height: 4rpx;
	background-color: #e60026;
	border-radius: 2px;
}
.head .moreShop{
  width: 20%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding-right: 30rpx;
  box-sizing: border-box;
}
.head .moreShop text{
  font-size: 30rpx;
  color: #707070;
  margin-right: 6rpx;
}
.head .moreShop image{
  width: 22rpx;
  height: auto;
}

.content{
  margin-top: 108rpx;
  overflow: hidden;
}
.content .shopItem{
  width: 364rpx;
  /* height: 434rpx; */
  background:#fff;
  float: left;
  margin-right: 22rpx;
  margin-bottom: 22rpx;
  padding-bottom: 30rpx;
  box-sizing: border-box;
}
.content .shopItem:nth-child(2n){
  margin-right: 0;
}
.content .commodityPic{
  width: 100%;
  height: 367rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.content .commodityPic image{
  width: 242rpx;
}
.content .commodityName{
  font-size: 24rpx;
  color: #6b6b6b;
  padding: 0 50rpx 0 30rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  box-sizing: border-box;
  display: block;
}
.content .commodityInfo{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 25rpx 0 30rpx;
  box-sizing: border-box;
}
.content .commodityInfo .price{
  font-size: 24rpx;
  color: #e60026;
}
.content .commodityInfo .num{
  font-size: 24rpx;
  color: #6b6b6b;
}