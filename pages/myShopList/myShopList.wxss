page{
  background: #f5f5f5;
}
.yellow{
  color: #ffa800;
}
.gray{
  color: #7b7b7b;
}
.green{
  color: #00ff78;
}
.red{
  color: #ff6b6b;
}

.nav{
  width: 100%;
  height: 88rpx;
  background: #fff;
  box-shadow: 0px 8px 24px 0px 
		rgba(203, 203, 203, 0.4);
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10
}
.title-scroll-view{
  overflow:hidden;
  white-space:nowrap;
}
.sub-title {
  text-align: center;
}
.title-item {
  height: 88rpx;
  line-height: 88rpx;
  font-size: 28rpx;
  display: inline-block;
  padding: 0 33rpx;	
  color: #666666;
}
.active {
  color: #e60026;
  position: relative;
}
.active::before{
  content: '';
  width: 30%;
  height: 6rpx;
  border-radius: 6rpx;
  display: block;
  position: absolute;
  bottom: 0;
  left: 50%;
  margin-left: -15%;
  background:#e60026; 
}
.nav-container {
  display: flex;
  flex-direction: row;
}

.wrap{
  margin-top: 116rpx;
}
.wrap .card:last-child{
  margin-bottom: 0;
}
.card{
  width: 100%;
  padding: 24rpx 50rpx;
  box-sizing: border-box;
  background: #fff;
  display: flex;
  justify-content: space-between;
  margin-bottom: 24rpx;
}
.shop_pic{
  width: 215rpx;
  height: 215rpx;
  border-radius: 8rpx;
  overflow: hidden;
}
.shop_pic image{
  width: 100%;
  height: auto;
}
.shop_info{
  width: 435rpx;
  padding: 0 0 0 28rpx;
  box-sizing: border-box;
  position: relative;
}
.shop_info .title{
  font-size: 30rpx;
  color: #373737;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.price{
  display: block;
  font-size: 30rpx;
  color: #e60026;
  margin-top: 26rpx;
}
.shop_info .label{
  position: absolute;
  bottom: 0;
  right: 0;
  font-size: 30rpx;
}