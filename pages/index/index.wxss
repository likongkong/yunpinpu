/* 进入店铺按钮  start*/
.more{
	background-image: linear-gradient(90deg, 
		#ae55dc 0%, 
		#ce46b0 0%, 
		#ee3684 0%, 
		#fc5d31 100%), 
	linear-gradient(
		#ffffff, 
		#ffffff);
	background-blend-mode: normal, 
		normal;
  padding: 0;
  position: relative;
  display: flex;
  align-items: center;
}
.more text{
  color: #fff;
  position: absolute;
  display: block;
}
.more image{
  position: absolute;
}
/* end */
/* 卡片标题  start*/
.title-h1::before{
  content: "";
  position: absolute;
  left: 0;
  width: 11rpx;
	height: 34rpx;
	background-blend-mode: normal, 
		normal;
	border-radius: 6rpx;
  display: block;
}
.blue{
  color: #006ad1;
}
.yellow{
  color: #ff8c10;
}
.blue::before{
  background-image: linear-gradient(-30deg, 
		#4aa1f5 0%, 
		#2be0ff 100%), 
	linear-gradient(
		#f33b30, 
		#f33b30);
}
.yellow::before{
  background-image: linear-gradient(-30deg, 
		#fdbd35 0%, 
		#f98f49 100%), 
	linear-gradient(
		#f33b30, 
		#f33b30);
}
/* end */


.head{
