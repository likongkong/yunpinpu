page{
  background: #f5f5f5;
}
.wrap{
  width: 100%;
	border-top:4rpx solid #f5f5f5;
  background: #fff;
}
.card{
  width: 690rpx;
	height: 388rpx;
	background-image: linear-gradient(0deg, 
		#fb6565 0%, 
		#f93f3f 44%, 
		#f71919 100%, 
		#a64789 100%, 
		#5474f8 100%);
  border-radius: 24rpx;
  margin: 30rpx 30rpx 0 30rpx;
  padding: 30rpx;
  box-sizing: border-box;
  position: relative;
  font-size: 64rpx;
  color: #ffffff;
}
.card text{
  font-size: 32rpx;
  color: #ffffff;
  position: absolute;
  display: block;
}
.card text:first-child{
  left: 30rpx;
  top: 30rpx;
}
.card text:last-child{
  right: 30rpx;
  bottom: 30rpx;
}
.card .price{
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  text-align: center;
  line-height: 388rpx;
  font-size: 64rpx;
  color: #fff;
}

.consignment{
  width: 100%;
  height: 92rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  box-sizing: border-box;
  margin-top: 32rpx;
}
.consignment>view:first-child{
  font-size: 28rpx;  
  color: #111111;
}
.consignment>view:last-child{
  font-size: 28rpx;  
  color: #111111;
}
.consignment>view:last-child text{
  display: inline-block;
  color: #ff4f50;
}
.consignment>view:last-child image{
  width: 22rpx;
}